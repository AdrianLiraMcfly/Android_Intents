<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/scott">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Scott Pilgrim"
        android:textSize="70dp"
        android:textColor="@color/white"
        android:id="@+id/txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt"
        android:text="Scott Pilgrim (Michael Cera), el bajista de una banda de rock, nunca había tenido problemas para conseguir una novia; usualmente el problema era deshacerse de ellas. Pero cuando Ramona Flowers (Mary Elizabeth Winstead) entra en su corazón, él descubre que se ha metido en muchos problemas ya que debe enfrentarse a un ejército de ex-parejas que no se detendrán para eliminarlo como el pretendiente de Ramona."
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="100dp" />

    <Button
        android:id="@+id/btnr"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Regresar"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="429dp" />


</androidx.constraintlayout.widget.ConstraintLayout>